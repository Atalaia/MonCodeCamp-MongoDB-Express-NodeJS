<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To MyCodingBootcamp!</h1>
            <p>View our hand-picked coding bootcamps from all over the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/codecamps/new">Add New Coding Bootcamp</a>
            </p>
        </div>
    </header>
    
    <div class="search-form">
        <p>
            <form action="/codecamps" method="GET" class="form-inline">
                <div class="form-group">
                    <input type="text" name="search" placeholder="Coding bootcamps search..." class="form-control" size="50">
                    <input type="submit" value="Search" class="btn btn-default">
                </div>
            </form>
        </p>
    </div>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <div class="col-md-12">
            <% if(noMatch !== null) { %>
                <h3><%= noMatch %></h3>
            <% } %>
        </div>
        <% codecamps.forEach(function(codecamp) { %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= codecamp.image %>" alt="Code Camp Image" width="250px">
                <div class="caption">
                    <h4><%= codecamp.name %></h4>
                </div>
                <p>
                    <a href="/codecamps/<%= codecamp._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
        <% }); %>
    </div>

</div>

<%- include("../partials/footer") %>